<div class="container-fluid">
    <div class="form-login">
        <div class="login">
            {{#if message}}
            <div class="alert alert-danger" role="alert">
                <span>{{message}}</span>
            </div>
            {{/if}}
            <form action="/Signin" method="post">
                <div class="form-group">
                    <img src="./Image/logo.jpg" width="150px" height="150px"
                        style="margin-left: 130px; margin-bottom: 10px;">
                </div>
                <h3>Đăng nhập tài khoản</h3>
                <div class="form-group">
                    <label for="">Email:</label>
                    <input style="background-color: rgba(196, 195, 195, 0.1);border: none; color: black;" type="email"
                        class="form-control" name="email" id="email" placeholder="Enter Email">
                </div>
                <div class="form-group">
                    <label for="">Mật khẩu:</label>
                    <input style="background-color: rgba(196, 195, 195, 0.1);border: none;color: black;" type="password"
                        class="form-control" name="password" id="password" placeholder="EnterPassword">
                </div>
                <div class="form-group form-check">

                    <label class="form-check-label" style="float: left;">
                        <input class="form-check-input" type="checkbox">
                        <a style="color: black">Remember me</a>
                    </label>
                    <a style="float: left;padding: 2px;margin-left: 117px;" href="#">Forgot Password ?</a>

                </div>
                <button type="submit" class="btn btn-primary">Đăng nhập</button>
                <a name="signup" id="signup" class="btn btn-secondary" href="/signup" role="button">Đăng ký</a>

            </form>
        </div>
    </div>
</div>