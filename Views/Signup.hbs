<div class="container-fluid">

    <div class="form-login form-register">
        <div class="login">

            {{#if message}}
            <div class="alert alert-danger" role="alert">
                <span>{{message}}</span>
            </div>
            {{/if}}
            <form action="/Signup" method="post">
                <div class="form-group">
                    <img src="./Image/logo.jpg" width="150px" height="150px"
                        style="margin-left: 130px; margin-bottom: 10px;">
                    <br>
                    <h4>Đăng ký tài khoản</h4>
                </div>

                <div class="form-group">
                    <label for="">Họ và tên</label>
                    <input style="background-color: rgba(196, 195, 195, 0.1);border: none;color: black;" type="text"
                        class="form-control" placeholder="Enter fullname" name="fullname" id="fullname">
                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input style="background-color: rgba(196, 195, 195, 0.1);border: none;color: black;" type="email"
                        class="form-control" placeholder="Enter email" name="email" id="email">
                </div>
                <div class="form-group">
                    <label for="">Mật khẩu</label>
                    <input style="background-color: rgba(196, 195, 195, 0.1);border: none;color: black;" type="password"
                        class="form-control" placeholder="Enter password" name="password" id="password">
                </div>
                <div class="form-group">
                    <label for="">Nhập lại mật khẩu</label>
                    <input style="background-color: rgba(196, 195, 195, 0.1);border: none;color: black;" type="password"
                        class="form-control" placeholder="Enter password" name="repassword" id="repassword">
                </div>
                <button type="submit" class="btn btn-primary">Đăng ký</button>
                <a name="signup" id="signup" class="btn btn-secondary" href="/Signin" role="button">Về trang
                    đăng
                    nhập</a>
                </button>

            </form>
        </div>
    </div>
</div>